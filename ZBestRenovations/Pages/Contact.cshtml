@page
@model ZBestRenovations.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<!-- CONTACT PAGE BANNER -->
<section class="container py-5">
    <div class="contact-banner">
        <img src="~/images/contact/banner.jpeg" alt="ZBestRenovations Banner">
    </div>
</section>

<!-- CONTACT INFO SECTION -->
<section class="container py-5 contact-info-section">
    <h2 class="section-heading text-center fw-bold">Call or Text Us</h2>

    <div class="contact-items">
        <div class="contact-row">
            <h3 class="contact-name">Rizwan</h3>
            <p class="contact-number">647-609-9110</p>
            <img class="contact-qr" src="~/images/contact/rizwan-qr.jpeg" alt="Rizwan QR Code">
        </div>

        <div class="contact-row">
            <h3 class="contact-name">Zafar</h3>
            <p class="contact-number">416-824-5027</p>
            <img class="contact-qr" src="~/images/contact/zafar-qr.jpeg" alt="Zafar QR Code">
        </div>

        <div class="contact-email">
            <h3 class="contact-email-heading">Email</h3>
            <p class="contact-email-address">info@zbestrenovations.com</p>
        </div>
    </div>
</section>
